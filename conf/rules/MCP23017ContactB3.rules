rule "Switch state of LED3 Changed"
when
    Item MCP23017VirtualSwitchB3 received update
then
    if(MCP23017VirtualSwitchB3.state == ON)
        MCP23017ContactB3_LED.sendCommand(OFF)
    else
        MCP23017ContactB3_LED.sendCommand(ON)
end
 
rule "Contact state of LED3 Changed"
when
    Item MCP23017ContactB3 changed
then
    if(MCP23017ContactB3_LED.state == ON)
        MCP23017VirtualSwitchB3.postUpdate(ON)
    else
        MCP23017VirtualSwitchB3.postUpdate(OFF)
end