rule "Switch state of LED6 Changed"
when
    Item MCP23017VirtualSwitchB6 received update
then
    if(MCP23017VirtualSwitchB6.state == ON)
        MCP23017ContactB6_LED.sendCommand(OFF)
    else
        MCP23017ContactB6_LED.sendCommand(ON)
end
 
rule "Contact state of LED6 Changed"
when
    Item MCP23017ContactB6 changed
then
    if(MCP23017ContactB6_LED.state == ON)
        MCP23017VirtualSwitchB6.postUpdate(ON)
    else
        MCP23017VirtualSwitchB6.postUpdate(OFF)
end