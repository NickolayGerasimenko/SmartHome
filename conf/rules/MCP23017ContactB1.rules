rule "Switch state of LED1 Changed"
when
    Item MCP23017VirtualSwitchB1 received update
then
    if(MCP23017VirtualSwitchB1.state == ON)
        MCP23017ContactB1_LED.sendCommand(OFF)
    else
        MCP23017ContactB1_LED.sendCommand(ON)
end
 
rule "Contact state of LED1 Changed"
when
    Item MCP23017ContactB1 changed
then
    if(MCP23017ContactB1_LED.state == ON)
        MCP23017VirtualSwitchB1.postUpdate(ON)
    else
        MCP23017VirtualSwitchB1.postUpdate(OFF)
end