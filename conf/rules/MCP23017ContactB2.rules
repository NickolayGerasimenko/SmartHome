rule "Switch state of LED2 Changed"
when
    Item MCP23017VirtualSwitchB2 received update
then
    if(MCP23017VirtualSwitchB2.state == ON)
        MCP23017ContactB2_LED.sendCommand(OFF)
    else
        MCP23017ContactB2_LED.sendCommand(ON)
end
 
rule "Contact state of LED2 Changed"
when
    Item MCP23017ContactB2 changed
then
    if(MCP23017ContactB2_LED.state == ON)
        MCP23017VirtualSwitchB2.postUpdate(ON)
    else
        MCP23017VirtualSwitchB2.postUpdate(OFF)
end