rule "Switch state of LED4 Changed"
when
    Item MCP23017VirtualSwitchB4 received update
then
    if(MCP23017VirtualSwitchB4.state == ON)
        MCP23017ContactB4_LED.sendCommand(OFF)
    else
        MCP23017ContactB4_LED.sendCommand(ON)
end
 
rule "Contact state of LED4 Changed"
when
    Item MCP23017ContactB4 changed
then
    if(MCP23017ContactB4_LED.state == ON)
        MCP23017VirtualSwitchB4.postUpdate(ON)
    else
        MCP23017VirtualSwitchB4.postUpdate(OFF)
end