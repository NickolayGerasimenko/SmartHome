rule "Switch state of LED7 Changed"
when
    Item MCP23017VirtualSwitchB7 received update
then
    if(MCP23017VirtualSwitchB7.state == ON)
        MCP23017ContactB7_LED.sendCommand(OFF)
    else
        MCP23017ContactB7_LED.sendCommand(ON)
end
 
rule "Contact state of LED7 Changed"
when
    Item MCP23017ContactB7 changed
then
    if(MCP23017ContactB7_LED.state == ON)
        MCP23017VirtualSwitchB7.postUpdate(ON)
    else
        MCP23017VirtualSwitchB7.postUpdate(OFF)
end